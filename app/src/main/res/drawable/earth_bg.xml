<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:angle="45"
                android:startColor="#061022"
                android:centerColor="#03101A"
                android:endColor="#000000"
                android:type="linear" />
        </shape>
    </item>
    <item android:bottom="40dp" android:left="40dp" android:right="40dp" android:top="40dp">
        <shape android:shape="oval">
            <gradient
                android:angle="45"
                android:startColor="#1E88E5"
                android:centerColor="#00E5FF"
                android:endColor="#00C853"
                android:type="radial"
                android:gradientRadius="280dp" />
            <size android:width="400dp" android:height="400dp" />
            <alpha android:alpha="0.35"/>
        </shape>
    </item>
</layer-list>
