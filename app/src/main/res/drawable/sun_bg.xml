<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:angle="45"
                android:startColor="#120818"
                android:centerColor="#07040C"
                android:endColor="#000000"
                android:type="linear" />
        </shape>
    </item>
    <item android:bottom="40dp" android:left="40dp" android:right="40dp" android:top="40dp">
        <shape android:shape="oval">
            <gradient
                android:angle="45"
                android:startColor="#FFEB3B"
                android:centerColor="#FF9800"
                android:endColor="#FF3D00"
                android:type="radial"
                android:gradientRadius="300dp" />
            <size android:width="420dp" android:height="420dp" />
            <alpha android:alpha="0.28"/>
        </shape>
    </item>
</layer-list>
